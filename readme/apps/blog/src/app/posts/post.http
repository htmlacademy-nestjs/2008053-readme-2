# Create a new post
POST http://localhost:3333/api/posts HTTP/1.1
Content-Type: application/json

{
  "content": {
    "type": "LINK",
    "url": "http://test.link.com",
    "desc": "test link description"
  },
  "isDraft": false,
  "tags": ["tag", "tag?", "tag!"],
  "userID": "23r1f3rvf212"
}

